<h1>タスク新規作成ページ</h1>

<%= form_for(@task) do|f|  %>

<% if @task.errors.any?  %>

<div id="error_explanation">
  <ul>
<%  @task.errors.full_messages.each do |message| %>
    <li>
<%= message  %>
    </li>
<%  end %>
  </ul>
  
</div>

<%  end %>

<%= f.label :content, "タスク"  %>

<%= f.text_field :content %>

<%= f.label :status, "スタッツ" %>

<%= f.text_field :status  %>

<%= f.submit "投稿"  %>

<%  end %>

<%= link_to "一覧にもどる", tasks_path  %>